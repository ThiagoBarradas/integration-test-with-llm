      "get": {
        "tags": [
          "BookEndpoints"
        ],
        "operationId": "GetAllBooks",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Book"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "BookEndpoints"
        ],
